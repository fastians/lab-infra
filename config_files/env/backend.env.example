# MEK LAB Backend Environment Variables
# Copy this to group_vars/secrets.yml and encrypt with ansible-vault

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/meklab
DATABASE_POOL_SIZE=10

# API Keys
API_KEY=your-api-key-here
SECRET_KEY=your-secret-key-here

# External Services
EXTERNAL_API_URL=https://api.example.com
EXTERNAL_API_KEY=your-external-api-key

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=https://mek-lab.com,https://api.mek-lab.com
