apiVersion: 1

datasources:
  - name: Prometheus
    type: prometheus
    access: proxy
    url: http://{{ prometheus_server }}:9090
    isDefault: true
    editable: true

  - name: Loki (Salome)
    type: loki
    access: proxy
    url: http://localhost:3100
    editable: true

  - name: Alertmanager
    type: alertmanager
    access: proxy
    url: http://{{ prometheus_server }}:9093
    jsonData:
      implementation: prometheus
    editable: true
