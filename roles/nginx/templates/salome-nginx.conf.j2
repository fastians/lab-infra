server {
    server_name salome.mek-lab.com;
    client_max_body_size 10M;

    # ---- Blackbox exporter ----
    location /blackbox/ {
        proxy_pass http://127.0.0.1:9115/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/salome.mek-lab.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/salome.mek-lab.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

server {
    if ($host = salome.mek-lab.com) {
        return 301 https://$host$request_uri;
    }

    listen 80;
    server_name salome.mek-lab.com;
    return 404;
}
