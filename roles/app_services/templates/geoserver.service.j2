[Unit]
Description=GEO Server - Defeaturing Project
After=network.target

[Service]
User=mateen_fastians
Group=mateen_fastians
WorkingDirectory=/home/mateen_fastians/.apps/Defeaturing

Environment="PYTHONUNBUFFERED=1"
Environment="PYTHONPATH=/usr/lib/freecad-python3/lib"
EnvironmentFile=/home/mateen_fastians/.apps/Defeaturing/.env

ExecStart=/home/mateen_fastians/.apps/Defeaturing/.venv/bin/uvicorn main:app \
    --host 127.0.0.1 \
    --port 8001 \
    --log-level info

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
