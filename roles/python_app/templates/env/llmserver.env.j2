# =============================================================================
# CAE Agent Backend - Environment Variables Configuration
# =============================================================================

# Application Configuration
APP_NAME=CAE Agent Backend
APP_VERSION=0.4.3
ENVIRONMENT=development
DEBUG=false

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=True

# Database Configuration (PostgreSQL) - OPTIONAL
DATABASE_ENABLED=true  # Set false to run without DB
DATABASE_URL={{ vault_llm_database_url }}
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Mem0 Configuration (v0.4 - Semantic Memory)
MEM0_API_KEY={{ vault_mem0_api_key }}

# ==============================================================================
# LLM PROVIDER
# ==============================================================================
LLM_PROVIDER=openrouter
LLM_MODEL_NAME=openai/gpt-5.2
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=2000
INTENT_CLASSIFICATION_MODEL=openai/gpt-4o-mini

# LLM Provider API Keys
GEMINI_API_KEY={{ vault_gemini_api_key | default('') }}
OPENAI_API_KEY={{ vault_openai_api_key | default('') }}
OPENROUTER_API_KEY={{ vault_openrouter_api_key }}
OPENROUTER_HTTP_REFERER=http://meklab.com
OPENROUTER_X_TITLE=MekLab

# Embedding Service Configuration
EMBEDDING_PROVIDER=openrouter
EMBEDDING_MODEL_NAME=Qwen3-Embedding-8B
EMBEDDING_MODEL_DIMENSION=4096

# Vector Store Configuration
VECTOR_STORE_TYPE=pinecone
PINECONE_API_KEY={{ vault_pinecone_api_key }}
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1
PINECONE_NAMESPACE=coding-agent-improved
EMBEDDING_INDEX_NAME=coding-agent-index1
PINECONE_USER_GUIDE_NAMESPACE=help-desk
USE_HYBRID_SEARCH=True

# RAG System Configuration
CHUNK_SIZE=2000
CHUNK_OVERLAP=200

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
INTERNAL_API_KEY={{ vault_internal_api_key }}

# File Storage Configuration
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=./storage
MAX_FILE_SIZE_MB=100

# Action System Configuration
ACTION_SUGGESTION_LIMIT=10
ACTION_BATCH_MAX_SIZE=50
ACTION_RETRY_MAX_ATTEMPTS=3

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_TIMEOUT=60
